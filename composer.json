{
	"name": "drago-ex/translator",
	"type": "library",
	"description": "Simple translator.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=7.4",
		"nette/di": "^3.0",
		"nette/utils": "^3.1",
		"nette/application": "^3.0"
	},
	"require-dev": {
		"nette/tester": "^2.3",
		"nette/bootstrap": "^3.0",
		"tracy/tracy": "^2.7",
		"phpstan/phpstan-nette": "^0.12"
	},
	"replace": {
		"drago-fw/translator": "self.version"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration tests/phpstan.neon src",
		"tester": "tester tests -s"
	}
}
