{
	"name": "drago-ex/translator",
	"type": "library",
	"description": "Simple and lightweight translator for the Nette Framework. Provides localization using NEON translation files with support for global and optional module-specific translations.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=8.3 <9",
		"nette/di": "^3.1",
		"nette/utils": "^4.0",
		"nette/application": "^3.1"
	},
	"require-dev": {
		"nette/tester": "^2.5",
		"nette/bootstrap": "^3.1",
		"tracy/tracy": "^2.10",
		"phpstan/phpstan-nette": "^1.2.9"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration tests/phpstan.neon src",
		"tester": "tester tests -s"
	}
}

