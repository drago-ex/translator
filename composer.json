{
	"name": "drago-ex/translator",
	"type": "library",
	"description": "Lightweight translator for Nette Framework using NEON files, supporting global and module-specific translations.",
	"license": ["MIT"],
	"authors": [
		{
			"name": "Zdeněk Papučík",
			"homepage": "https://github.com/accgit"
		}
	],
	"require": {
		"php": ">=8.3 <9",
		"nette/di": "^3.1",
		"nette/utils": "^4.0",
		"nette/application": "^3.1",
		"nette/caching": "^3.4"
	},
	"require-dev": {
		"nette/tester": "^2.5",
		"nette/bootstrap": "^3.1",
		"tracy/tracy": "^2.10",
		"phpstan/phpstan-nette": "^1.2.9"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"scripts": {
		"phpstan": "phpstan analyse --level 5 --configuration tests/phpstan.neon src",
		"tester": "tester tests -s"
	}
}
